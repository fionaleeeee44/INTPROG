<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/re41mi1mb2tg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rzm65oaxdnhc"
            android:layout_width="match_parent"
            android:layout_height="740dp"
            android:background="#F3F0E3"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="21dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rpi2qk80jm9p"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_back" />

                <LinearLayout
                    android:id="@+id/rxq8myeuorpq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingHorizontal="7dp"
                    android:paddingVertical="17dp">

                    <TextView
                        android:id="@+id/rlxgvjfx3ggk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Photosynthesis Basics"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/rpslkpngcj4l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="8dp"
                android:text="Definition"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/definitionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:text="Photosynthesis is the process by which plants produce their own food and oxygen using sunlight, carbon dioxide, and water."
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/rgkse0gioxp6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="8dp"
                android:text="Process"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/rjy8sqnezwr"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginHorizontal="18dp"
                android:layout_marginBottom="26dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_plant" />

            <TextView
                android:id="@+id/rytfbvvva9bs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="8dp"
                android:text="Equation"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/equationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:text="6CO₂ + 6H₂O → C₆H₁₂O₆ + 6O₂"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>
</LinearLayout>
    </ScrollView>
    </LinearLayout>