<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDEC"
    android:padding="24dp">

    <!-- Centered Welcome Message and Image -->
    <LinearLayout
        android:id="@+id/center_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/albert_sans"
            android:gravity="center"
            android:text="Welcome to"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:contentDescription="Memoratica Title"
            android:scaleType="centerInside"
            android:src="@drawable/memoratica_title"
            android:layout_marginTop="12dp"
            android:elevation="4dp" />
    </LinearLayout>

    <!-- Sign In and Sign Up Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="32dp"
        android:layout_marginHorizontal="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signin_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sign In"
            android:textColor="@android:color/white"
            app:backgroundTint="#86A788"
            app:cornerRadius="50dp"
            app:elevation="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sign Up"
            android:textColor="@android:color/white"
            app:backgroundTint="#86A788"
            app:cornerRadius="50dp"
            app:elevation="6dp" />
    </LinearLayout>

</RelativeLayout>
